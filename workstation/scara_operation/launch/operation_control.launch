<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find scara_operation)/config/opetration_rivet.yaml" command="load"/>

  <!-- load the controllers ns="/rivet" -->
  <node name="rivet_controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
    output="screen" ns="/scara_operation/rivet" args="joint1_position_controller joint_state_controller"/>

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="rivet_robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
    respawn="false" output="screen">
    <remap from="/joint_states" to="/rivet/joint_states" />
  </node>

</launch>

